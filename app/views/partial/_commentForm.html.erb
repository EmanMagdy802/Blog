<% if @comment.errors.any? %>
   <div class="alert alert-danger">
      <ul>
         <% @comment.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
         <% end %>
      </ul>
   </div>
<% end %>

<%= form_for(@comment, url: comments_path ) do |f| %>
   <div class="form-group">
      <%= f.text_area :comment, rows: "5", placeholder: "Content...", class: 'form-control' %>
   </div>
      <%= submit_tag params[:action] == 'new'? 'add': 'edit', class: 'btn btn-success btn-block' %>
<% end %>