<% if @post.errors.any? %>
   <div class="alert alert-danger">
      <ul>
         <% @post.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
         <% end %>
      </ul>
   </div>
<% end %>

<%= form_for(@post, url: @post ) do |f| %>
   <div class="form-group">
      <%= f.text_field :title, placeholder: "Title...", class: 'form-control' %>
   </div>
   <div class="form-group">
      <%= f.text_area :content, rows: "5", placeholder: "Content...", class: 'form-control' %>
   </div>
      <%= submit_tag params[:action] == 'new'? 'Post': 'edit', class: 'btn btn-success btn-block' %>
<% end %>